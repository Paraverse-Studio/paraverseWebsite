
  <label>Title</label>
  <input required value="<%= blog.title %>" type="text" name="title" id="title">

  <label>Description</label>
  <textarea required type="text" name="description" id="description" style="resize: none;">
    <%= blog.description %></textarea>
  <label>Markdown</label>
  <textarea required type="text" name="markdown" id="markdown" style="resize: none;">
    <%= blog.markdown %></textarea>
  <button type="submit" class="btn save-btn purple-bg-color">Save</button>
  <a href="/blogs" class="a-btn cancel-btn">Cancel</a>
