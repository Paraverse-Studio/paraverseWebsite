<!DOCTYPE html>
<html>
<head>
  <title>Paraverse - <%= title %></title>
  <%- include('../partials/_head.ejs') %>
</head>

<body>
  <!-- TOP NAVIGATION BAR -->
  <%- include('../partials/_navbar.ejs') %>
  <br><br><br><br><br>
  <!-- HEADER -->
  <div class="welcome">
      <h2>Paraverse  Blog</h2>
      <section>Stay up to date with Paraverse Studio. View all our latest blogs here.</section><br>
      <hr class="welcome"><br>
  </div>

  <div>
    <% blogs.forEach(blog => { %>
      <div class="container">
        <div>
          <h4><a href="/<%= blog.slug %>" class="article-title-link"><%= blog.title %></a></h4>
          <div class="date-text"><%= blog.createdAt.toLocaleDateString() %></div>
          <div class="description-text"><%= blog.description %></div>
        </div>
        <div class="article-btns-container">
          <a href="/blogs/edit/<%= blog.id %>" class="a-btn green">Edit</a>
          <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn red">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- FOOTER  -->
  <%- include('../partials/_footer.ejs') %>
  
</body>
</html>