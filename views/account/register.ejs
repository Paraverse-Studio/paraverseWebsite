<!DOCTYPE html>
<html>
  <head>
    <title>Paraverse - <%= title %></title>
    <%- include('../partials/_head.ejs') %>
  </head>

  <body>
    <!-- TOP NAVIGATION BAR -->
    <%- include('../partials/_navbar.ejs') %>
    <br><br><br><br>
    <!-- HEADER -->
    <div class="welcome">
      <h2>Register</h2>
      <section>Enter your credentials below to create an account</section><br>
      <hr class="welcome">
    </div>
    <!-- MAIN CONTENT -->
    <div class="container" id="containerLogin">
      <section class="account-section">
        <!-- <h2 class="page-title">Register</h2> -->
        <form class="account-form" method="POST" action="/account/register">
          <%- include('../partials/messages.ejs')%>
          <label>First Name</label>
          <input type="text" name="firstName" id="firstName" placeholder="first name" />
          <label>Last Name</label>
          <input type="text" name="lastName" id="lastName" placeholder="last name" />
          <label>Email</label>
          <input type="email" name="email" id="email" placeholder="email" />
          <label>Username</label>
          <input minLength="6" type="text" name="username" id="username" placeholder="username" />
          <label>Password</label>
          <input minLength="8" type="password" name="password" id="password" placeholder="password" />
          <label>Confirm Password</label>
          <input minLength="8" type="password" name="confirmPassword" id="confirmPassword" placeholder="confirm password" />
          <button class="btn account-button" type="submit">Register</button>
        </form>
      </section>
    </div>
    <!-- FOOTER  -->
    <%- include('../partials/_footer.ejs') %>

  </body>
</html>